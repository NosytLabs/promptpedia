# App
NEXT_PUBLIC_APP_NAME="PromptPedia"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="A modern web application for discovering, sharing, and managing AI prompts"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/promptpedia"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# GitHub OAuth
GITHUB_ID="your-github-oauth-id"
GITHUB_SECRET="your-github-oauth-secret"

# OpenAI (Optional - for AI features)
OPENAI_API_KEY="your-openai-api-key"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="60000"

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES="false"
NEXT_PUBLIC_ENABLE_SOCIAL_FEATURES="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"